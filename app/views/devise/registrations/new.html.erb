<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h2><%= t(".header") %></h2>

    <div class="card border-primary">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, id: :user_first_name, autofocus: true, class: "form-control", placeholder: "First Name" %>
          </div>

          <div class="form-group">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, id: :user_last_name, autofocus: true, class: "form-control", placeholder: "Last Name" %>
          </div>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "email" %>
          </div>

          <div class="check-icons">
            <%= octicon "shield-check", class: "hide", id: "check-success", style: "fill: green;"%>
            <%= octicon "shield-x", class: "hide", id: "check-failure", style: "fill: red;" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "secret" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "secret" %>
          </div>

          <div class="actions">
            <%= f.submit t("action.sign_up"), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
     </div>

    <%= render "devise/shared/links" %>
    <%= javascript_pack_tag 'utilities/registrationPassword' %>
  </div>
</div>
