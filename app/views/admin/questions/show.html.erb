<h1><%= @question.test.title %> Question</h1>
<p><%= @question.body %></p>
<%= link_to "Back", admin_test_path(@question.test) %>
<%= link_to "Edit", edit_admin_question_path(@question) %>
<%= button_to "Delete", admin_question_path(@question), method: :delete, data: { confirm: "Are you sure?" } %>
<h2>Answers</h2>

<ol><%= render @question.answers %></ol>

<%= link_to "New Answer", new_admin_question_answer_path(@question) %>
