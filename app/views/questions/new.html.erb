<h1>Создать вопрос</h1>
<form action="/tests/<%= @test.id %>/questions" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <input name="question[test_id]" value="<%= @test.id %>" type="hidden">
  <textarea rows="2" cols="40" name="question[body]" placeholder="Задайте вопрос"></textarea>
  <br>
  <input type="submit" value="Создать">
</form>
