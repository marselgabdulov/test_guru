<header class="header">
  <nav class="navbar navbar-light bg-light" style="margin-left: 10px; margin-right: 10px;">
    <%= link_to "Test Guru", root_path, class: "navbar-brand" %>
    <span class="navbar-text">
    <% if user_signed_in? %>
      <%= t(".greeting", name: current_user.full_name) %>
      <%= link_to t(".logout"), destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to t(".login"), new_user_session_path %> |
      <%= link_to t(".signup"), new_user_registration_path %>
    <% end %>
    </span>
  </nav>
</header>
