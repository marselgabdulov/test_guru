<header class="header">
  <div class="logo"><%= link_to "Test Guru", root_path %></div>
  <nav class="nav">
    <ul class="nav__items">
      <% if user_signed_in? %>
        <li class="nav__item">Welcome, <b><%= current_user.full_name %></b> Guru</li>
        <li class="nav__item"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li class="nav__item"><%= link_to "Login", new_user_session_path %></li>
        <li class="nav__item"><%= link_to "Signup", new_user_registration_path %></li>
      <% end %>
    </ul>
  </nav>
</header>
