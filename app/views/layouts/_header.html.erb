<header class="header">
  <div class="logo"><%= link_to "Test Guru", root_path %></div>
  <nav class="nav">
    <ul class="nav__items">
      <% if logged_in? %>
        <li class="nav__item">Welcome, <b><%= current_user.name %></b> Guru</li>
        <li class="nav__item"><%= link_to "Logout", logout_path, method: :delete %></li>
      <% else %>
        <li class="nav__item"><%= link_to "Login", login_path %></li>
        <li class="nav__item"><%= link_to "Signup", signup_path %></li>
      <% end %>
    </ul>
  </nav>
</header>
