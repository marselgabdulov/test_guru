<h1><%= t(".header") %></h1>
<table class="table">
  <thead class="table-dark">
    <tr>
      <th scope="col" class="sort-by-title pointer">
        <%= t(".title") %>
        <%= octicon "arrow-up", class: "text-success hide"%>
        <%= octicon "arrow-down", class: "text-success hide"%>
      </th>
      <th scope="col"><%= t(".level") %></th>
      <th scope="col"><%= t(".questions") %></th>
      <th scope="col"><%= t(".time_to_pass") %></th>
      <th scope="col"><%= t(".actions") %></th>
    </tr>
  <thead>
  <%= render @tests %>
</table>
<%= javascript_pack_tag 'utilities/sorting' %>
